{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des article des transactions</h1>
    <table class="table table-hover table-bordered panel-primary">
        <thead class="panel-heading">
            <tr>
                <th>Id</th>o
                <th>Quantite Déposée</th>
                <th>Quantité Retirée</th>
                <th>En cours</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for articleIntervenant in articleIntervenants %}
                <tr>
                    <td><a href="{{ path('articleintervenant_show', { 'id': articleIntervenant.id }) }}">{{ articleIntervenant.id }}</a></td>
                    <td>{{ articleIntervenant.quantiteDepose }}</td>
                    <td>{{ articleIntervenant.quantiteRetire }}</td>
                    <td>{% if articleIntervenant.enCours %}Yes{% else %}No{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('articleintervenant_show', { 'id': articleIntervenant.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('articleintervenant_edit', { 'id': articleIntervenant.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('articleintervenant_new') }}">Create a new articleIntervenant</a>
        </li>
    </ul>
{% endblock %}
