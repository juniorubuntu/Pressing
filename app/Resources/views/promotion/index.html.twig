{% extends 'base.html.twig' %}

{% block body %}
    <h1>Promotions list</h1>

    <table class="table table-striped table-bordered panel-info" id="datatable-buttons">
        <thead class="panel-heading">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>Reduction</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for promotion in promotions %}
                <tr>
                    <td><a href="{{ path('promotion_show', { 'id': promotion.id }) }}">{{ promotion.id }}</a></td>
                    <td>{{ promotion.nom }}</td>
                    <td>{% if promotion.debut %}{{ promotion.debut|date('d-m-Y') }}{% endif %}</td>
                    <td>{% if promotion.fin %}{{ promotion.fin|date('d-m-Y') }}{% endif %}</td>
                    <td>{{ promotion.reduction }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('promotion_show', { 'id': promotion.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('promotion_edit', { 'id': promotion.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('promotion_new') }}">Create a new promotion</a>
        </li>
    </ul>
{% endblock %}
