{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="form-article panel panel-primary">
        <div class="panel-heading">
            <h3>Ajout d'un client</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <div class="row">
                    <div class=" col-sm-3 col-md-3 col-xm-3">
                        <label>Nom du client</label>
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Brumel'}})  }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class=" col-sm-3 col-md-3 col-xm-3">
                        <label>Numéro de téléphone </label>
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'type': 'number', 'placeholder': 'Ex: +237 695951176'}})  }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class=" col-sm-3 col-md-3 col-xm-3">
                        <label>Adresse email</label>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'type': 'number', 'placeholder': 'Ex: juniorubuntu@gmail.com'}})  }}
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <a href="{{ path('client_index') }}"><input type="cancel" value="Retourner à la liste" class="btn btn-default"/></a>
            <input type="submit" value="Ajouter" class="btn btn-primary pull-right"/>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
