{% extends 'base.html.twig' %}

{% block body %}
    <div class="form-article panel panel-primary">
        <div class="panel-heading">
            <h3>Informations sur la tâche</h3>
        </div>
        <table class="table table-hover panel-body">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ tache.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ tache.nom }}</td>
                </tr>
            </tbody>
        </table>
        <div class="panel-footer">
            <a href="{{ path('tache_index') }}">
                <input type="cancel" value="Retourner à la liste" class="btn btn-default"/>
            </a>
            <a href="{{ path('tache_edit', { 'id': tache.id }) }}" class="btn btn-success pull-right">Modifier</a>
        </div>
    </div>
{% endblock %}
