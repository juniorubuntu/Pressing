{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des receptions non livrées</h1>

    <table class="table table-striped table-bordered table-hover panel-info" id="datatable-buttons">
        <thead class="panel-heading">
            <tr>
                <th>N° reçu</th>
                <th>Client</th>
                <th>Date rendez-vous</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for reception in receptions %}
                <tr>
                    <td><a href="">17K00{{ reception.id }}</a></td>
                    <td>{{ reception.client }}</td>
                    <td>{% if reception.dateRdv %}{{ reception.dateRdv|date('d-m-Y H:i:s') }}{% endif %}</td>
                    <td>
                        <a href="{{ path('reception_show', { 'id': reception.id }) }}">Livrer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <script type = "text/javascript" >
        $(document).ready(function () {
            $('#datatable-responsive').DataTable();
            TableManageButtons.init();
        });
    </script>
{% endblock %}