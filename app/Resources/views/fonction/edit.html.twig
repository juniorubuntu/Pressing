{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(edit_form) }}
    <div class="form-article panel panel-primary">
        <div class="panel-heading">
            <h3>Modifier ou supprimer une fonction</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <div class="row">
                    <div class=" col-sm-3 col-md-3 col-xm-3">
                        <label>Nom de la fonction</label>
                        {{ form_widget(edit_form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Pantalon simple'}})  }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class=" col-sm-3 col-md-3 col-xm-3">
                        <label>Salaire de base</label>
                        <div class="input-group">
                            {{ form_widget(edit_form.salaire, {'attr': {'class': 'form-control', 'type': 'number', 'min': 50,  'placeholder': '1500'}})  }}
                            <div class="input-group-addon">FCFA</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="">
                <a href="{{ path('fonction_index') }}"><input type="cancel" value="Retourner Ã  la liste" class="btn btn-default"/></a>
                    {{ form_end(edit_form) }}    
                <input type="submit" value="Modifier" class="btn btn-success pull-right"/>
            </div>
            <hr>
            {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer" class="btn btn-primary"/>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
