{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="form-article panel panel-primary">
        <div class="panel-heading">
            <h3>Ajout d'une tâche à une fonction</h3>
        </div>
        <div class="panel-body">
            <div class="form-inline">
                <div class=" col-sm-5 col-md-5 col-xm-5">
                    <label>Choisir une  fonction: </label>
                    {{ form_widget(form.fonction, {'attr': {'class': 'form-control'}})  }}
                </div>
                <div class=" col-sm-5 col-md-5 col-xm-5">
                    <label>Choisir la tâche à lui attribuer: </label>
                    {{ form_widget(form.tache, {'attr': {'class': 'form-control', 'type': 'number'}})  }}
                </div>
            </div>
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
        <div class="panel-footer">
            <a href="{{ path('droit_index') }}"><input type="cancel" value="Retourner à la liste" class="btn btn-default"/></a>
            <input type="submit" value="Ajouter" class="btn btn-primary pull-right"/>
        </div>
    </div>
{% endblock %}
